{
  "name": "url-shortner",
  "version": "1.0.0",
  "description": "A URL shortener service built with Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec tsx src/index.ts",
    "watch": "tsc -w",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "type": "module",
  "keywords": [
    "url",
    "shortener",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.10",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  }
}
